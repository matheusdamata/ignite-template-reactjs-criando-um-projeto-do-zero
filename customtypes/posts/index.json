{
  "id": "posts",
  "label": "posts",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": { "label": "slug", "placeholder": "" },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": { "label": "Title", "placeholder": "" }
      },
      "subtitle": {
        "type": "Text",
        "config": { "label": "subtitle", "placeholder": "" }
      },
      "author": {
        "type": "Text",
        "config": { "label": "author", "placeholder": "" }
      },
      "banner": {
        "type": "Image",
        "config": { "label": "banner", "constraint": {}, "thumbnails": [] }
      },
      "content": {
        "type": "Group",
        "config": {
          "label": "content",
          "fields": {
            "heading": {
              "type": "Text",
              "config": { "label": "heading", "placeholder": "" }
            },
            "body": {
              "type": "StructuredText",
              "config": {
                "label": "body",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
              }
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
